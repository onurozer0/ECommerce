@model SignUpViewModel
<title>
	Kayıt Ol
</title>
<!--start breadcrumb-->
<section class="py-3 border-bottom border-top d-none d-md-flex bg-light">
	<div class="container">
		<div class="page-breadcrumb d-flex align-items-center">
			<h3 class="breadcrumb-title pe-3">Kayıt Ol</h3>
		</div>
	</div>
</section>
<!--end breadcrumb-->
<section class="py-0 py-lg-5">
	<div class="container">
		<div class="section-authentication-signin d-flex align-items-center justify-content-center my-5">
			<div class="row row-cols-1 row-cols-lg-1 row-cols-xl-2">
				<div class="col mx-auto">
					<div class="card mb-0">
						<div class="card-body">
							<div class="border p-4 rounded">
								<div class="text-center">
									<h3 class="">Kayıt Ol</h3>
									<p>
										Hesabınız Var Mı? <a asp-controller="User" asp-action="SignIn">Giriş Yap</a>
									</p>
								</div>
								<div class="d-grid">
									<a class="btn my-4 shadow-sm btn-white">
										<span class="d-flex justify-content-center align-items-center">
											<i class="bx bxl-google"></i>
											<span>Google ile Giriş Yap</span>
										</span>
									</a> <a class="btn btn-white"><i class="bx bxl-facebook"></i>Facebook ile Giriş Yap</a>
								</div>
								<div class="login-separater text-center mb-4">
									<span class="text-uppercase">E-Posta Ile Kayıt Ol</span>
									<hr />
								</div>
								<div class="form-body">
									@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
									{
										<div class="alert alert-success" role="alert">
											@ViewBag.SuccessMessage
										</div>
									}


									<form asp-controller="User" asp-action="SignUp" method="post" class="row g-3">

										<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
										</div>
										<div class="col-12">
											<label asp-for=@Model.UserName class="form-label"></label>
											<input  class="form-control" asp-for=@Model.UserName>
											<span asp-validation-for="@Model.UserName" class="text-danger"></span>
										</div>
										<div class="col-sm-6">
											<label asp-for=@Model.Name class="form-label"></label>
											<input  class="form-control" asp-for=@Model.Name>
											<span asp-validation-for="@Model.Name" class="text-danger"></span>
										</div>
										<div class="col-sm-6">
											<label asp-for=@Model.Surname class="form-label"></label>
											<input  class="form-control" asp-for=@Model.Surname>
											<span asp-validation-for="@Model.Surname" class="text-danger"></span>
										</div>
										<div class="col-12">
											<label asp-for=@Model.Email class="form-label"></label>
											<input type="email" class="form-control" asp-for=@Model.Email>
											<span asp-validation-for="@Model.Email" class="text-danger"></span>
										</div>
										<div class="col-12">
											<label asp-for=@Model.PhoneNumber class="form-label"></label>
											<input id="phoneNumberInput" type="tel" class="form-control" asp-for=@Model.PhoneNumber>
											<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
										</div>
										<div class="col-sm-6">
											<label asp-for="@Model.Password" class="form-label"></label>
											<div class="input-group" id="show_hide_password">
												<input type="password" class="form-control" asp-for="@Model.Password"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
											</div>
											<span asp-validation-for="@Model.Password" class="text-danger"></span>
										</div>
										<div class="col-sm-6">
											<label asp-for="@Model.ConfirmPassword" class="form-label"></label>
											<div class="input-group" id="show_hide_password">
												<input type="password" class="form-control" asp-for="@Model.ConfirmPassword">
											</div>
											<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
										</div>
										<div class="col-12">
											<div class="d-grid">
												<button type="submit" class="btn btn-dark"><i class='bx bx-user'></i>Kayıt Ol</button>
											</div>
										</div>
										@Html.AntiForgeryToken()
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<!--end row-->
		</div>
	</div>
</section>
@model UserAccountDetailsViewModel
<title>
	Hesap Detayları
</title>
<div class="page-wrapper">
	<div class="page-content">
		<!--start shop cart-->
		<section class="py-4">
			<div class="container">
				<h3 class="d-none">Hesap</h3>
				<div class="card">
					<div class="card-body">
						<div class="row">
							<partial name="_LayoutForUserDashboard"></partial>
							<div class="col-lg-8">
								<div class="card shadow-none mb-0 border">
									<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
									</div>
									<div class="card-body">
										@if (TempData["SuccessMessage"] != null)
										{
											<div class="alert alert-success" role="alert">
												@TempData["SuccessMessage"]
											</div>
										}
										<form class="row g-3" asp-controller="Member" asp-action="AccountDetails" method="post">
											<div class="col-md-6">
												<label asp-for="@Model.FirstName" class="form-label"></label>
												<input asp-for=@Model.FirstName type="text" class="form-control">
												<span asp-validation-for="@Model.FirstName" class="text-danger"></span>
											</div>
											<div class="col-md-6">
												<label asp-for=@Model.LastName class="form-label"></label>
												<input asp-for=@Model.LastName type="text" class="form-control">
												<span asp-validation-for="@Model.LastName" class="text-danger"></span>
											</div>
											<div class="col-md-6">
												<label asp-for=@Model.Gender class="form-label"></label>
												<select class="form-control" asp-for="@Model.Gender" asp-items="@ViewBag.GenderList">
													<option value="">Cinsiyet</option>
												</select>
												<span asp-validation-for="@Model.Gender" class="text-danger"></span>
											</div>
											<div class="col-md-6">
												<label asp-for=@Model.DateOfBirth class="form-label"></label>
												<input asp-for=@Model.DateOfBirth maxlength="10" class="form-control">
												<span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
											</div>
											<div class="col-12">
												<label asp-for=@Model.Email class="form-label"></label>
												<input asp-for=@Model.Email type="text" class="form-control">
												<span asp-validation-for="@Model.Email" class="text-danger"></span>
											</div>

											<div class="col-12">
												<label asp-for=@Model.PhoneNumber class="form-label"></label>
												<input id="phoneNumberInput" type="tel" class="form-control" asp-for=@Model.PhoneNumber>
												<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
												<script>
													$(document).ready(function () {
														$('#phoneNumberInput').mask('(000) 000-0000');
													});
												</script>
											</div>
											<div class="col-12">
												<label asp-for="@Model.Password" class="form-label"></label>
												<div class="input-group" id="show_hide_password">
													<input type="password" class="form-control" asp-for="@Model.Password"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
												</div>
												<span asp-validation-for="@Model.Password" class="text-danger"></span>
											</div>
											<div class="col-12">
												<label asp-for="@Model.PasswordConfirm" class="form-label"></label>
												<div class="input-group" id="show_hide_password">
													<input type="password" class="form-control" asp-for="@Model.PasswordConfirm"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
												</div>
												<span asp-validation-for="@Model.PasswordConfirm" class="text-danger"></span>
											</div>
											<div class="col-12">
												<button type="submit" class="btn btn-dark btn-ecomm">Değişiklikleri Onayla</button>
											</div>
											@Html.AntiForgeryToken()
										</form>
									</div>
								</div>
							</div>
						</div>
						<!--end row-->
					</div>
				</div>
			</div>
		</section>
		<!--end shop cart-->
	</div>
</div>
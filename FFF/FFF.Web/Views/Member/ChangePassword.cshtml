@model PasswordChangeViewModel
<title>
	Şifre Değiştirme
</title>
<div class="page-wrapper">
	<div class="page-content">
		<!--start shop cart-->
		<section class="py-4">
			<div class="container">
				<h3 class="d-none">Hesap</h3>
				<div class="card">
					<div class="card-body">
						<div class="row">
							<partial name="_LayoutForUserDashboard"></partial>
							<div class="col-lg-8">
								<div class="card shadow-none mb-0 border">
									<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
									</div>
									<div class="card-body">
										@if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
										{
										<div class="alert alert-success" role="alert">
										@ViewBag.SuccessMessage
										</div>
										}
										<form asp-controller="Member" asp-action="ChangePassword" method="post" class="row g-3">
											<div class="col-12">
												<label asp-for="@Model.CurrentPassword" class="form-label"></label>
												<div class="input-group" id="show_hide_password">
													<input type="password" class="form-control" asp-for="@Model.CurrentPassword"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
												</div>
												<span asp-validation-for="@Model.CurrentPassword" class="text-danger"></span>
											</div>
											<div class="col-12">
												<label asp-for="@Model.NewPassword" class="form-label"></label>
												<div class="input-group" id="show_hide_password">
													<input type="password" class="form-control" asp-for="@Model.NewPassword"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
												</div>
												<span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
											</div>
											<div class="col-12">
												<label asp-for="@Model.ConfirmPassword" class="form-label"></label>
												<div class="input-group" id="show_hide_password">
													<input type="password" class="form-control" asp-for="@Model.ConfirmPassword"> <a href="javascript:;" class="input-group-text bg-transparent"><i class='bx bx-hide'></i></a>
												</div>
												<span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
											</div>
											<div class="col-12">
												<button type="submit" class="btn btn-dark btn-ecomm">Kaydet</button>
											</div>
											@Html.AntiForgeryToken()
										</form>
									</div>
								</div>
							</div>
						</div>
						<!--end row-->
					</div>
				</div>
			</div>
		</section>
		<!--end shop cart-->
	</div>
</div>
@model IEnumerable<Product>
<title>Ürün Yönetimi</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Ürünler</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success" role="alert">
                                    @TempData["Success"]
                                </div>
                            }

                            <div class="responsive-table-plugin">

                                <div class="table-rep-plugin">
                                    <div class="table-responsive" data-pattern="priority-columns">
                                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                        <table id="tech-companies-1" class="table table-striped">

                                            <thead>
                                                <tr>
                                                    <th>Ürün Adı</th>
                                                    <th>Ürün Fiyatı</th>
                                                    <th>Stok Miktarı</th>
                                                    <th>Ürün Resimleri</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    foreach (Product s in Model)
                                                    {
                                                        <tr>
                                                            <td><a asp-controller="Product" asp-action="Update" asp-route-productId="@s.ID">@s.Name</a></td>
                                                            <td>@s.Price</td>
                                                            <td>@s.UnitsInStock</td>
                                                            <td>
                                                                <a asp-controller="ProductPicture" asp-action="Index" asp-route-productId="@s.ID">
                                                                    Ürüne Ait Resimler
                                                                </a>
                                                            </td>
                                                            <td>
                                                                <a asp-controller="Product" asp-action="Remove" asp-route-productId="@s.ID" class="btn btn-danger" style="color:#fff">Sil</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                <a class="btn btn-primary float-end" asp-area="Admin" asp-controller="Product" asp-action="Insert">Yeni Ekle</a>
                                            </tbody>
                                        </table>
                                    </div> <!-- end .table-responsive -->

                                </div> <!-- end .table-rep-plugin-->
                            </div> <!-- end .responsive-table-plugin-->
                        </div>
                    </div> <!-- end card -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>
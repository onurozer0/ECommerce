@model ProductViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
    Ürün Ekle
</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <form class="needs-validation" asp-area="Admin" asp-controller="Product" asp-action="New" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                <div class="col-12">
                                    <label asp-for="@Model.Product.Name" class="form-label"></label>
                                    <input asp-for="@Model.Product.Name" class="form-control ">
                                    <span asp-validation-for="@Model.Product.Name"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for=@Model.Product.BrandId class="form-label"></label>
                                    <select asp-items="@Model.Brands.Select(x => new SelectListItem{Text = x.Name, Value=x.ID.ToString()})" class="form-control" asp-for="@Model.Product.BrandId">
                                        <option value="@null">Marka Seçiniz</option>

                                    </select>
                                    <span asp-validation-for="@Model.Product.BrandId" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for=@Model.Product.CategoryId class="form-label"></label>
                                    <select asp-items="@Model.Categories.Select(x => new SelectListItem{Text = x.Name, Value=x.ID.ToString()})" class="form-control" asp-for="@Model.Product.CategoryId">
                                        <option value="@null">Kategori Seçiniz</option>

                                    </select>
                                    <span asp-validation-for="@Model.Product.CategoryId" class="text-danger"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="@Model.Product.Price" class="form-label"></label>
                                    <input asp-for="@Model.Product.Price" class="form-control ">
                                    <span asp-validation-for="@Model.Product.Price"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="@Model.Product.UnitsInStock" class="form-label"></label>
                                    <input asp-for="@Model.Product.UnitsInStock" class="form-control ">
                                    <span asp-validation-for="@Model.Product.UnitsInStock"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="@Model.Product.Description" class="form-label"></label>
                                    <input asp-for="@Model.Product.Description" class="form-control ">
                                    <span asp-validation-for="@Model.Product.Description"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="@Model.Product.Details" class="form-label"></label>
                                    <textarea class="form-control editor1" asp-for="@Model.Product.Details">
                                    </textarea>
                                    <span class="text-danger" asp-validation-for="@Model.Product.Details"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="@Model.Product.ShippingDetails" class="form-label"></label>
                                    <textarea class="form-control editor1" asp-for="@Model.Product.ShippingDetails">
                                    </textarea>
                                    <span class="text-danger" asp-validation-for="@Model.Product.ShippingDetails"></span>
                                </div>
                                <button class="btn btn-warning" type="reset">Temizle</button>
                                <button class="btn btn-primary" type="submit">Ekle</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>
@section customScripts {
    <script src="/admin/ckeditor/ckeditor.js"></script>
    <script>

        $(".editor1").each(function () {
            CKEDITOR.replace($(this).attr("id"))
        });
    </script>
}
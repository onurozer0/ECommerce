@model Order
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
    Sipariş Detay
</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Görüntülenen Sipariş : @Model.OrderNumber</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <label class="form-label">Ürünler</label>
                            @foreach (var od in Model.OrderDetails)
                            {
                                <div class="col-12">
                                    <a asp-area="" asp-action="Index" asp-controller="Product" asp-route-productId="@od.ProductID">@od.Product.Name X @od.Quantity adet</a>
                                </div>
                            }

                            <form class="needs-validation" asp-area="Admin" asp-controller="Orders" asp-action="Details" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                <input type="hidden" asp-for="@Model.ID" />

                                <div class="col-12">
                                    <label asp-for=@Model.OrderStatus class="form-label"></label>
                                    <select asp-items="Html.GetEnumSelectList<OrderStatus>()" class="form-control" asp-for="@Model.OrderStatus">
                                    </select>
                                </div>
                                <button class="btn btn-primary" type="submit">Güncelle</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>
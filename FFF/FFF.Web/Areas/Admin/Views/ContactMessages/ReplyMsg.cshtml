@model ContactMessageReplyViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
    Mesaj Yanıtla
</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Yanıtlanan Mesaj Id :@Model.ID  </h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5>Yanıtlanan Mesaj:</h5>
                            <span> <p> @Model.Message</p></span>
                            <form class="needs-validation" asp-area="Admin" asp-controller="ContactMessages" asp-action="ReplyMsg" method="post">
                                <input asp-for=@Model.Email type="hidden">
                                <input asp-for=@Model.Message type="hidden">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                <div class="col-12">
                                    <textarea class="form-control editor1" asp-for="@Model.ReplyMessage">
                                    </textarea>
                                    <span class="text-danger" asp-validation-for="@Model.ReplyMessage"></span>
                                </div>
                                <button class="btn btn-primary" type="submit">Yanıtı Gönder</button>
                                @Html.AntiForgeryToken()
                               
                            </form>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>

@section customScripts {
    <script src="/admin/ckeditor/ckeditor.js"></script>
    <script>

        $(".editor1").each(function () {
            CKEDITOR.replace($(this).attr("id"))
        });
    </script>
}
@model ContactMessageReplyViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
    Mesaj Yanıtla
</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Mesaj Id :@Model.ID  </h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <h5> Mesaj: </h5>
                            <span> <p> @Model.Message</p></span> 
                            <br />
                            <h5> Yanıtınız: </h5>
                            <span> @Html.Raw(Model.ReplyMessage)</span>
                            

                            
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>

@section customScripts {
    <script src="/admin/ckeditor/ckeditor.js"></script>
    <script>

        $(".editor1").each(function () {
            CKEDITOR.replace($(this).attr("id"))
        });
    </script>
}
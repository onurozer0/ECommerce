@model ICollection<RoleViewModel>
<title>Rol Yönetimi</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Rol Yönetimi</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <div class="responsive-table-plugin">
                                <div class="table-rep-plugin">
                                    <div class="table-responsive" data-pattern="priority-columns">
                                        <table id="tech-companies-1" class="table table-striped">
                                            <thead>
                                                <tr>
                                                    <th>ID</th>
                                                    <th data-priority="1">Rol Adı</th>
                                                    <th data-priority="3"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                
                                                    @foreach (var i in Model)
                                                    {
                                                    <tr>
                                                        <td>
                                                            <a asp-controller="Role" asp-action="Update" asp-route-roleId="@i.ID">
                                                                @i.ID
                                                            </a>
                                                        </td>

                                                        <td>@i.Name</td>
                                                        <td>
                                                            <a asp-area="Admin" asp-controller="Role" asp-action="Remove" asp-route-roleId="@i.ID" class="btn btn-danger" style="color:#fff">Sil</a>
                                                        </td>
                                                    </tr>

                                                    }
                                               
                                                <a class="btn btn-primary float-end" asp-area="Admin" asp-controller="Role" asp-action="CreateRole">Yeni Ekle</a>
                                            </tbody>
                                        </table>
                                    </div> <!-- end .table-responsive -->

                                </div> <!-- end .table-rep-plugin-->
                            </div> <!-- end .responsive-table-plugin-->
                        </div>
                    </div> <!-- end card -->
                </div> <!-- end col -->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->


</div>
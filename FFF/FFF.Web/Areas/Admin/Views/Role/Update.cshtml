@model RoleUpdateViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
    Rol Düzenleme
</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Düzenlenen Rol : @Model.Name</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <form method="post" class="needs-validation" asp-area="Admin" asp-controller="Role" asp-action="Update">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                <input type="hidden" asp-for="@Model.ID" />
                                <div class="col-12">
                                    <label asp-for="@Model.Name" class="form-label"></label>
                                    <input asp-for="@Model.Name" class="form-control ">
                                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                                </div>
                                <button class="btn btn-primary" type="submit">Değişiklikleri Kaydet</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>
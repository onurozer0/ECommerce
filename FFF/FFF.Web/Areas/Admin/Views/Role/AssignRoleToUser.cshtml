@model List<AssignRoleToUserViewModel>
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
    Rol Ekleme
</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Rol Eklenen Kullanıcı : ads</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <form class="needs-validation" asp-area="Admin" asp-controller="Role" asp-action="AssignRoleToUser" asp-route-userId="@ViewBag.UserId" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <div class="col-12 form-check">
                                        <label class="form-check-label">
                                            @Model[i].Name
                                        </label>
                                        <input class="form-check-input" type="checkbox" asp-for="@Model[i].isExist">
                                        <input type="hidden" asp-for="@Model[i].Name"/>
                                        <input type="hidden" asp-for="@Model[i].RoleId"/>
                                    </div>
                                }
                                <button class="btn btn-primary" type="submit">Değişiklikleri Kaydet</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>
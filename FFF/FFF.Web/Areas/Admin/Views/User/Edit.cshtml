@model UserViewModel
@section Scripts
{
	@await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
	Kullanıcı Düzenleme
</title>
<div class="content-page">
            <div class="content">

                <!-- Start Content-->
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                </div>
                                <h4 class="page-title">Düzenlenen Kullanıcı : @Model.UserName</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">


                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">
                                    <form class="needs-validation" asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
								<div class="col-12">
									<label asp-for="@Model.Name" class="form-label"></label>
									<input asp-for=@Model.Name type="text" class="form-control">
									<span asp-validation-for="@Model.Name" class="text-danger"></span>
								</div>
                                <input asp-for=@Model.UserName type="hidden" class="form-control">
                                <input asp-for=@Model.Id type="hidden" class="form-control">
								<div class="col-12">
									<label asp-for=@Model.Surname class="form-label"></label>
									<input asp-for=@Model.Surname type="text" class="form-control">
									<span asp-validation-for="@Model.Surname" class="text-danger"></span>
								</div>
                                <div class="col-12">
                                    <label asp-for=@Model.Email class="form-label"></label>
                                    <input asp-for=@Model.Email type="email" class="form-control">
                                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                                </div>
            
								<div class="col-12">
									<label asp-for=@Model.PhoneNumber class="form-label"></label>
									<input id="phoneNumberInput" type="tel" class="form-control" asp-for=@Model.PhoneNumber>
									<span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
								</div>
                                <div class="col-12">
                                    <label asp-for=@Model.isBanned class="form-label"></label>
                                    <select class="form-control" asp-for="@Model.isBanned">
                                        <option value="">Durum</option>
                                        <option value="@true">Pasif</option>
                                        <option value="@false">Aktif</option>
                                    </select>
                                    <span asp-validation-for="@Model.isBanned" class="text-danger"></span>
                                </div>
                                        <button class="btn btn-primary" type="submit">Değişiklikleri Kaydet</button>
                                        @Html.AntiForgeryToken()
                                    </form>
                                </div> <!-- end card-body-->
                            </div> <!-- end card-->
                        </div> <!-- end col-->
                    </div>
                    <!-- end row -->

                </div> <!-- container -->

            </div> <!-- content -->

        </div>
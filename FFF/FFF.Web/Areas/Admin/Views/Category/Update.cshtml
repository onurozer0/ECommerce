@model CategoryViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
<title>
    Kategori Düzenleme
</title>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box">
                        <div class="page-title-right">
                        </div>
                        <h4 class="page-title">Düzenlenen Kategori : @Model.Category.Name</h4>
                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">


                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">
                            <form class="needs-validation" asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post">
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                                <input type="hidden" asp-for="@Model.Category.ID" />
                                <div class="col-12">
                                    <label asp-for="@Model.Category.Name" class="form-label"></label>
                                    <input asp-for="@Model.Category.Name" class="form-control ">
                                    <span class="text-danger" asp-validation-for="@Model.Category.Name"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for="@Model.Category.DisplayIndex" class="form-label"></label>
                                    <input asp-for="@Model.Category.DisplayIndex" class="form-control ">
                                    <span class="text-danger" asp-validation-for="@Model.Category.DisplayIndex"></span>
                                </div>
                                <div class="col-12">
                                    <label asp-for=@Model.Category.ParentID class="form-label"></label>
                                    <select asp-items="@Model.Categories.Select(x => new SelectListItem{Text = x.Name, Value=x.ID.ToString()})" class="form-control" asp-for="@Model.Category.ParentID">
                                        <option value="">Üst Kategori Seçiniz</option>

                                    </select>
                                    <span asp-validation-for="@Model.Category.ParentID" class="text-danger"></span>
                                </div>
                                <button class="btn btn-primary" type="submit">Değişiklikleri Kaydet</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </div> <!-- end card-body-->
                    </div> <!-- end card-->
                </div> <!-- end col-->
            </div>
            <!-- end row -->

        </div> <!-- container -->

    </div> <!-- content -->

</div>